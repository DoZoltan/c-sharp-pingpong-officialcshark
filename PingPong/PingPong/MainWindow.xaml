<Window x:Class="PingPong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPong"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Name ="myCanvas" Background="LightBlue" Focusable="True">
        <Rectangle x:Name="ball" Height="30" Width="30" Fill="Red" Canvas.Left="350" Canvas.Top="10" />
        <Rectangle x:Name="paddle" HorizontalAlignment="Left" Height="20" Width="100" Fill="Black" Canvas.Left="350" Canvas.Top="350"/>
    </Canvas>
</Window>
